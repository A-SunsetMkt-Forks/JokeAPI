{
    // REQUIRES EXTENSION: fabiospampinato.vscode-highlight
    "highlight.regexFlags": "g",
    "highlight.regexes": {
        "(((jsl|scl)\\.)?unused\\((\\d|\\w|[_,\\[\\]\\s\\-\":.])+\\);?)": [ // jsl.unused([foo, bar]); or scl.unused(foo) or unused(foo, bar);
            {
                "backgroundColor": "rgba(0, 0, 0, 0.2)",
                "color": "#f88"
            }
        ],
        "(TODO(\\((\\s|\\d|\\w|[,.-_+*&])+\\))?:?)": [ // TODO: or TODO or TODO(xy): but not todo
            {
                "backgroundColor": "#cd5",
                "color": "#000",
                "overviewRulerColor": "#cd5"
            }
        ],
        "(#MARKER)": [ // #MARKER test
            {
                "backgroundColor": "#920",
                "color": "#fff",
                "isWholeLine": true,
                "overviewRulerColor": "#920"
            }
        ],
        "(#SECTION ([^\\S\\r\\n]*[\\w,.\\-_&]+)*[:]*)": [ // #SECTION test, 123 & foo
            {
                "backgroundColor": "#44f",
                "color": "white",
                "overviewRulerColor": "#44f"
            }
        ],
        "(#DEBUG#?)": [ // #DEBUG# or #DEBUG
            {
                "backgroundColor": "#ff0",
                "color": "blue",
                "overviewRulerColor": "#ff0"
            }
        ],
        "(IMPORTANT:)": [ // IMPORTANT:
            {
                "backgroundColor": "#a22",
                "color": "#fff"
            }
        ],
        "(<(!--)?%#(INSERT|INJECT):[a-zA-Z0-9\\-_]+#%(--)?>)": [ // <!--%#INSERT:TEST#%--> / <!--%#INJECT:TEST#%--> or shorthand: <%#INSERT:TEST#%> / <%#INJECT:TEST#%>
            {
                "color": "orange",
                "fontStyle": "italic",
                "outline": "1px solid orange"
            }
        ]
    },

    // REQUIRES EXTENSION: coenraads.bracket-pair-colorizer-2
    "bracket-pair-colorizer-2.colors": [
        "#996DCF",
        "#0F6A8F",
        "#41BCA3",
        "#659061",
        "#EDD553",
        "#E09563",
        "#F05443"
    ],

    // REQUIRES EXTENSION: esbenp.prettier-vscode

    "prettier.enable": false,
    "editor.formatOnSave": false,

    // JokeAPI-specific:

    "files.exclude": {         // hide files so they can't be opened in the IDE
        "docs/compiled": true, // to prevent accidentally changing the compiled documentation to only have it be overridden after the next compile
        "dev/madge": true,     // legacy dependency graph - these files don't need to be modified, they only serve as a distraction
        ".env": true,          // environment variables - to prevent leaking them accidentally - to edit the file instead use the command "code .env"
    },

    "npm-scripts.showStartNotification": false,

    "deno.enable": false, // so deno server doesn't start up and crash
}